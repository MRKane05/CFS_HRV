<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.symptoms.SymptomsFragment">

    <!-- Horizontal guidelines for percentage-based positioning -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_76"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_81"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />

    <!-- Background image - fills entire parent -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/background_image" />

    <!-- Day Title Group - positioned at 1-10% of screen height -->
    <LinearLayout
        android:id="@+id/DayTitleGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF225271"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/guideline_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_01">

        <ImageButton
            android:id="@+id/btn_dayback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/arrow_down_float" />

        <TextView
            android:id="@+id/txt_daytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Today 15th"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_dayforward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/arrow_up_float" />

    </LinearLayout>

    <!-- Fatigue Layout Group - positioned at 12-30% of screen height -->
    <LinearLayout
        android:id="@+id/FatigueLayoutGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#225271"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_12">

        <TextView
            android:id="@+id/fatigueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fatigue Level"
            android:textAlignment="center"
            android:textColor="#FFCFCFCF"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/fatigueRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layoutDirection="inherit"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtn_fatigueLevel0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#FFCFCFCF" />

            <RadioButton
                android:id="@+id/rbtn_fatigueLevel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textColor="#FFCFCFCF" />

            <RadioButton
                android:id="@+id/rbtn_fatigueLevel2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textColor="#FFCFCFCF" />

            <RadioButton
                android:id="@+id/rbtn_fatigueLevel3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textColor="#FFCFCFCF" />

            <RadioButton
                android:id="@+id/rbtn_fatigueLevel4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textColor="#FFCFCFCF" />

            <RadioButton
                android:id="@+id/rbtn_fatigueLevel5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textColor="#FFCFCFCF" />
        </RadioGroup>
    </LinearLayout>

    <!-- Headache/Exertion Layout Group - positioned at 35-53% of screen height -->
    <LinearLayout
        android:id="@+id/HeadacheLayoutGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF225271"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_35">

        <TextView
            android:id="@+id/headacheTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimated Exertion"
            android:textAlignment="center"
            android:textColor="#FFCFCFCF"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/headacheRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layoutDirection="inherit"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtn_headacheLevel0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#FFCFCFCF" />

            <RadioButton
                android:id="@+id/rbtn_headacheLevel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textColor="#FFCFCFCF" />

            <RadioButton
                android:id="@+id/rbtn_headacheLevel2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textColor="#FFCFCFCF" />

            <RadioButton
                android:id="@+id/rbtn_headacheLevel3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textColor="#FFCFCFCF" />

            <RadioButton
                android:id="@+id/rbtn_headacheLevel4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textColor="#FFCFCFCF" />

            <RadioButton
                android:id="@+id/rbtn_headacheLevel5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textColor="#FFCFCFCF" />
        </RadioGroup>

    </LinearLayout>

    <!-- Prediction Text - positioned at 58% of screen height -->
    <TextView
        android:id="@+id/prediction_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF225271"
        android:gravity="center"
        android:text="Todays prediction:"
        android:textAlignment="center"
        android:textColor="#CFCFCF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_76"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_58" />

</androidx.constraintlayout.widget.ConstraintLayout>